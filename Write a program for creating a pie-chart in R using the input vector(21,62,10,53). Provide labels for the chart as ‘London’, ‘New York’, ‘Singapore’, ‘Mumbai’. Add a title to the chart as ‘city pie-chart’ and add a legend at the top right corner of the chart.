library(ggplot2)
city_data <- c(21, 62, 10, 53)
city_labels <- c("London", "New York", "Singapore", "Mumbai")
ggplot(data.frame(city_labels, city_data), aes(x = "", y = city_data, fill = city_labels)) +
 geom_bar(width = 1, stat = "identity") +
 coord_polar("y", start = 0) +
 labs(title = "City Pie Chart", x = NULL, y = NULL) +
 scale_fill_manual(values = c("#00AFBB", "#E7B800", "#FC4E07", "#56B1F7")) +
 theme(legend.position = "top", legend.title = element_blank(),
 plot.title = element_text(hjust = 0.5)) +
 guides(fill = guide_legend(ncol = 2))
